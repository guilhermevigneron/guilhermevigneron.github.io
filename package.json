{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "Personal portfolio website.",
  "scripts": {
    "test:accessibility": "axe http://127.0.0.1:4000",
    "test:performance": "lighthouse http://127.0.0.1:4000 --view --output=json,html --output-path=./lighthouse-report --chrome-flags='--headless --no-sandbox'",
    "test:html": "w3c-html-validator --input ./_site/index.html",
    "test:security": "npm audit --audit-level=high"
  },
  "author": "Guilherme Vigneron de Oliveira",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/cli": "^4.9.1",
    "lighthouse": "^12.0.0",
    "w3c-html-validator": "^5.0.1"
  }
}
